---
// No se necesita lógica específica en el frontmatter
---

<div id="loading-animation" class="fixed inset-0 bg-white z-[9999] flex flex-col items-center justify-center transition-opacity duration-500">
  <div class="animate-bounce flex flex-col items-center">
    <img 
      src="/logo-jaque.png" 
      alt="Jaque" 
      class="h-20 w-auto mb-4 opacity-0 animate-fadeIn"
      style="animation-delay: 0.3s;"
      width="120"
      height="40"
    />
    <div class="w-32 h-1 bg-gray-200 rounded-full overflow-hidden">
      <div class="h-full bg-gradient-to-r from-primary-500 to-primary-700 animate-loading-bar"></div>
    </div>
  </div>
</div>

<style>
  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(10px); }
    to { opacity: 1; transform: translateY(0); }
  }
  
  @keyframes loadingBar {
    0% { width: 0; opacity: 1; }
    70% { width: 100%; opacity: 1; }
    100% { width: 100%; opacity: 0; }
  }
  
  .animate-fadeIn {
    animation: fadeIn 0.6s ease-out forwards;
  }
  
  .animate-loading-bar {
    animation: loadingBar 1.5s ease-in-out forwards;
  }
</style>

<script>
  // Ocultar la animación cuando la página termine de cargar
  document.addEventListener('DOMContentLoaded', () => {
    const loadingElement = document.getElementById('loading-animation');
    
    if (loadingElement) {
      // Asegurarse de que la animación se vea al menos 1.5 segundos
      setTimeout(() => {
        loadingElement.style.opacity = '0';
        
        // Eliminar el elemento del DOM después de la transición
        setTimeout(() => {
          loadingElement.remove();
        }, 500);
      }, 1500);
    }
  });
</script>
